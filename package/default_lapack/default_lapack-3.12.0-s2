# SDK2 package definition for default-slot lapack

# Set package-specific variables

PACKAGE_NAME=default_lapack
VERSION=3.12.0
SRC_FILE=lapack-${VERSION}.tar.gz

SRC_DIR=$PACKAGE_NAME
BUILD_DIR=$SRC_DIR

# Functions

unpack () {

    echo "Unpacking $PACKAGE_NAME into $SD"

    # Unpack the tarball

    rm -rf $SD
    mkdir $SD

    tar xf $SF -C $SD --strip-components 1

    if [ $? -ne 0 ]; then
	echo "FAILED in tar for $PACKAGE_NAME"
	exit 1
    fi

    # Move other files into place

    cp ${PD}/default_lapack/make.inc-3.12.0 ${SD}/make.inc

}

build () {

    echo "Building $PACKAGE_NAME in $BD"

    # Clean up

    cd $BD

    make clean
    rm -f *.a

    # Build

    make -j$NCORES
    make -j$NCORES -C CBLAS

    if [ $? -ne 0 ]; then
	echo "FAILED in make for $PACKAGE_NAME"
	exit 1
    fi

}

install () {

    echo "Installing $PACKAGE_NAME from $BD"

    # Copy the static libraries

    cd $BD

    cp -av librefblas.a ${DEST_ROOT}/math-slots/default/lib/libblas.a
    cp -av libcblas.a ${DEST_ROOT}/math-slots/default/lib/libcblas.a
    cp -av liblapack.a ${DEST_ROOT}/math-slots/default/lib/liblapack.a
    cp -av libtmglib.a ${DEST_ROOT}/math-slots/default/lib/libtmg.a

    # Create the shared libraries

    create_shared_lib \
        -c gfortran \
	${DEST_ROOT}/math-slots/default/lib/libblas.a
    create_shared_lib \
        -c gfortran \
        -L ${DEST_ROOT}/math-slots/default/lib -lblas \
	${DEST_ROOT}/math-slots/default/lib/libcblas.a
    create_shared_lib \
        -c gfortran \
        -L ${DEST_ROOT}/math-slots/default/lib -lblas \
	${DEST_ROOT}/math-slots/default/lib/liblapack.a
    create_shared_lib \
        -c gfortran  \
        -L ${DEST_ROOT}/math-slots/default/lib -lblas -llapack \
	${DEST_ROOT}/math-slots/default/lib/libtmg.a

    # Copy docs

    mkdir -pv ${DEST_ROOT}/share/doc/lapack
    cp -av LICENSE README.md ${DEST_ROOT}/share/doc/lapack/

    # Create pkgconf files

    for f in ${FD}/*.pc.in; do
	g=`basename $f .in`
        sed -e s/@VERSION@/$VERSION/g $f > ${DEST_ROOT}/math-slots/default/lib/pkgconfig/$g
	echo "Created pkgconf file $g"
    done

}
